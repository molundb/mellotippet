  "main": "lib/index.js",
  "scripts": {
    "lint": "eslint --ext .js,.ts .",
    "lintf": "eslint --ext .js,.ts . --fix",
    "build": "tsc",
    "build:watch": "tsc --watch",
    "emulators": "firebase emulators:start",
